@model BookMovieCatalog.Models.Book

<h2>Изтриване на книга</h2>
<div class="alert alert-warning" role="alert">
    Сигурни ли сте, че искате да изтриете тази книга?
</div>

<dl class="row">
    <dt class="col-sm-2">Заглавие</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
    <dt class="col-sm-2">Автор</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>
    <dt class="col-sm-2">Жанр</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>
    <dt class="col-sm-2">Година</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.YearPublished)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
