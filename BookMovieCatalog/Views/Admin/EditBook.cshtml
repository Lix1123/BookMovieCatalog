@model BookMovieCatalog.Models.Book

<h2>Редактиране на книга</h2>

<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Заглавие</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Автор</label>
        <input asp-for="Author" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Жанр</label>
        <input asp-for="Genre" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Година</label>
        <input asp-for="YearPublished" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Снимка (URL)</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Запази</button>
    <a asp-action="Books" class="btn btn-secondary">Отказ</a>
</form>
