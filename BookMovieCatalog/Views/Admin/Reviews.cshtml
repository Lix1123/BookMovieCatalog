@model IEnumerable<BookMovieCatalog.Models.Review>

<h2>Управление на рецензии</h2>

<table class="table">
    <thead>
        <tr>
            <th>Потребител</th>
            <th>Филм/Книга</th>
            <th>Оценка</th>
            <th>Коментар</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.UserName</td>
                <td>
                    @(review.Book != null ? review.Book.Title : review.Movie?.Title ?? "Неизвестно")
                </td>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
                <td>@review.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="DeleteReview" asp-route-id="@review.Id"
                       class="btn btn-danger"
                       onclick="return confirm('Сигурни ли сте, че искате да изтриете тази рецензия?');">
                        Изтриване
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
