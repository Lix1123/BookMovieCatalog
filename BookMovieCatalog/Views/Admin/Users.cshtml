@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Списък с потребители</h2>

<table class="table">
    <thead>
        <tr>
            <th>Потребителско име</th>
            <th>Имейл</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Редактиране</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
