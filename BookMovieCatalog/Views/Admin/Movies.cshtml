@model IEnumerable<BookMovieCatalog.Models.Movie>

<h2>Списък с филми</h2>
<table class="table">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Режисьор</th>
            <th>Жанр</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Genre</td>
                <td>
                    
                    <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-primary">Редактирай</a>
                    <a asp-action="DeleteMovie" asp-route-id="@movie.Id" class="btn btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
