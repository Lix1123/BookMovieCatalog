@model BookMovieCatalog.Models.Movie

<h2>Редактиране на филм</h2>

<form asp-action="EditMovie" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Заглавие</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Director">Режисьор</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Genre">Жанр</label>
        <input asp-for="Genre" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="YearReleased">Година</label>
        <input asp-for="YearReleased" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Снимка (URL)</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TrailerUrl">Трейлър (URL)</label>
        <input asp-for="TrailerUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Запази промените</button>
    <a asp-action="Movies" class="btn btn-secondary mt-3">Отказ</a>
</form>
